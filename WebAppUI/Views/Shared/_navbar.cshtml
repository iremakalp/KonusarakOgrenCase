

<style>
    .navbar
    {
        color:white;
        font-size: 15px;
        margin:5px;

    }
    .navbarText{
        color: white;
        font-size: 15px;
        text-align:center;

    }

    ul {
        list-style-type: none;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" style="text-align:left; color: white;" href="/">E-Commerce</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="navbarText navbar-text">Home</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {  
                if (User.IsInRole("SysAdmin"))
                {
                    <li class="nav-item">
                        <a asp-controller="SysAdmin" asp-action="" class="navbarText navbar-text ">Customer Operations </a>
                    </li>                 
                    <li class="nav-item">
                        <a asp-controller="SysAdmin" asp-action="" class="navbarText navbar-text ">Product Operations</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="SysAdmin" asp-action="" class="navbarText navbar-text">Brand Operations</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="SysAdmin" asp-action="" class="navbarText navbar-text">System Operations</a>
                    </li>
                }
                if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="" class="navbarText navbar-text">Add Brand </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="" class="navbarText navbar-text">Update Brand</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="" class="navbarText navbar-text">Delete Brand</a>
                    </li>
                }
                if (User.IsInRole("Customer"))
                {
                    <li class="nav-item">
                        <a asp-controller="Customer" asp-action="" class="navbarText navbar-text"> Shop </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Customer" asp-action="" class="navbarText navbar-text">Add Product Comment</a>
                    </li>           
                }
            }
        </ul>

        <ul>

            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="" class="navbarText navbar-text">
                        @User.Identity.Name
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Logout" class="navbarText navbar-text">Logout</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Login" class="navbarText navbar-text">Login</a>
                </li>      
            }
        </ul>
    </div>
</nav>